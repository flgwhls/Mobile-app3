<?xml version="1.0" encoding="utf-8"?>
<!-- USED BY GREG DO NOT CHANGE -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edittextbackground"
    android:orientation="vertical"
    tools:context=".BookRegister">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <!--Menu bar-->
        <include layout="@layout/nav_header" />

        <EditText
            android:id="@+id/et_bookreg_title"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/title_of_book"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_bookreg_author"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/book_author"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_bookreg_ISBN"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/isbn_number"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/iv_bookreg_image"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginStart="150sp"
            android:layout_marginLeft="150sp"
            android:layout_marginEnd="150sp"
            android:layout_marginRight="150sp"
            android:contentDescription="@string/picrure_to_send"
            app:srcCompat="@android:drawable/ic_menu_upload" />

        <EditText
            android:id="@+id/et_bookreg_category"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/book_category"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_bookreg_edition"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/book_edition"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_bookreg_publisher"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/publisher"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_bookreg_publicyear"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/publication_year"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_bookreg_email"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:ems="10"
            android:hint="@string/email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_bookreg_price"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="@string/book_price"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_bookreg_register"
            android:layout_width="match_parent"
            android:layout_height="55sp"

            android:background="@color/teal_200"
            android:text="@string/register_book"
            app:backgroundTint="#00a06d" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">


        <include layout="@layout/drawer_menu" />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>